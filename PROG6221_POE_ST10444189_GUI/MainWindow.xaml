<Window x:Class="PROG6221_POE_ST10444189_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Awareness Chatbot" Height="500" Width="700"
        Loaded="MainWindow_Loaded">
    <Grid>
        <TextBlock Text="Cybersecurity Chatbot" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <ListBox Name="ChatHistory" 
                 Height="300" Width="650" 
                 VerticalAlignment="Top" Margin="25,50,25,0"
                 FontFamily="Consolas" 
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <TextBox Name="UserInput" 
                 Width="500" Height="30" 
                 HorizontalAlignment="Left" Margin="25,370,0,0"
                 KeyDown="UserInput_KeyDown"
                 FontSize="12"/>

        <Button Content="Send" 
                Width="100" Height="30" 
                HorizontalAlignment="Right" Margin="0,370,25,0"
                Click="SendMessage"/>
    </Grid>
</Window>