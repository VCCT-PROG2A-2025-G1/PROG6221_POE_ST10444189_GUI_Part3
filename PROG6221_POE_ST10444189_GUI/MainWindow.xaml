<Window x:Class="PROG6221_POE_ST10444189_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Awareness Chatbot" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded">
    <Grid>
        <TextBlock Text="Cybersecurity Chatbot" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <ListBox Name="ChatHistory" 
                 Height="400" 
                 VerticalAlignment="Top" Margin="30,50,30,0"
                 FontFamily="Consolas" 
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBox Name="UserInput" 
                 Width="600" Height="30" 
                 HorizontalAlignment="Left" Margin="75,470,0,0"
                 KeyDown="UserInput_KeyDown"
                 FontSize="12"/>
        <Button Content="Send" 
                Width="100" Height="30" 
                HorizontalAlignment="Right" Margin="0,470,75,0"
                Click="SendMessage"/>
    </Grid>
</Window>